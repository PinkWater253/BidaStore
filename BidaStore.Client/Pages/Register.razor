@page "/register"
@using DataShared.Library.Models
@inject IService<Customer> CustomerService
@inject NavigationManager NavigationManager

<h3>Đăng ký</h3>

<EditForm Model="model" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="model.Email" />
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText class="form-control" type="password" @bind-Value="model.Password" />
    </div>
    <div class="mb-3">
        <label class="form-label">First name</label>
        <InputText class="form-control" @bind-Value="model.FirstName" />
    </div>
    <div class="mb-3">
        <label class="form-label">Last name</label>
        <InputText class="form-control" @bind-Value="model.LastName" />
    </div>
    <button class="btn btn-primary" type="submit">Register</button>
</EditForm>

@code {
    private Customer model = new();

    private async Task HandleRegister()
    {
        model.RegisteredAt = DateTime.Now;
        var ok = await CustomerService.CreateItemAsync(model);
        if (ok) NavigationManager.NavigateTo("/login");
        else Console.WriteLine("Register failed");
    }
}