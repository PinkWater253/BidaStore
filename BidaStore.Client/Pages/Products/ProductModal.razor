@inject IService<Product> ProductService

<style>
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1050;
        width: 100vw;
        height: 100vh;
        background-color: #000;
        opacity: 0.5;
    }

    .modal {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1055;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
        overflow-y: auto;
        outline: 0;
        display: block;
    }

    .modal-dialog.modal-dialog-centered {
        display: flex;
        align-items: center;
        min-height: calc(100% - 1rem);
    }
</style>

@if (IsVisible)
{
    @* Lớp mờ phía sau *@
    <div class="modal-backdrop fade show"></div>

    @* Hộp thoại Modal *@
    <div class="modal fade show" tabindex="-1" style="display: block;">
        @* Thêm "modal-dialog-centered" để căn giữa popup *@
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="CloseModalAsync"></button>
                </div>

                <div class="modal-body">
                    @* Sử dụng lại ProductForm.razor *@
                    <ProductForm Product="Product"
                                 ButtonText="Save Changes"
                                 OnValidSubmit="HandleSaveAsync" />
                </div>

            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public Product Product { get; set; } = new();

    [Parameter]
    public EventCallback OnClose { get; set; } // Gửi sự kiện "đóng" ra ngoài

    [Parameter]
    public EventCallback OnSaveSuccess { get; set; } // Gửi sự kiện "lưu thành công"

    private string Title => Product.Id == 0 ? "Create New Product" : "Edit Product";

    private async Task HandleSaveAsync()
    {
        try
        {
            if (Product.Id == 0) // Chế độ Create
            {
                // Gọi API POST
                var response = await ProductService.CreateItemAsync(Product);
            }
            else // Chế độ Edit
            {
                // Gọi API PUT
                var response = await ProductService.UpdateItemAsync(Product);
            }

            // Báo cho cha (ProductList) biết là đã lưu thành công
            await OnSaveSuccess.InvokeAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving product: {ex.Message}");
            // Bạn có thể thêm hiển thị lỗi ở đây
        }
    }

    private async Task CloseModalAsync()
    {
        // Báo cho cha (ProductList) biết là modal cần được đóng
        await OnClose.InvokeAsync();
    }
}