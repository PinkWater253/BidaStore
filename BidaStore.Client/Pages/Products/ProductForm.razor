@using Microsoft.AspNetCore.Components.Forms

<EditForm Model="Product" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="mb-3">
        <label for="title" class="form-label">Tên sản phẩm</label>
        <InputText id="title" @bind-Value="Product.Title" class="form-control" />
        <ValidationMessage For="@(() => Product.Title)" />
    </div>

    <div class="mb-3">
        <label for="content" class="form-label">Mô tả</label>
        <InputTextArea id="content" @bind-Value="Product.ShortDescription" class="form-control" />
        <ValidationMessage For="@(() => Product.ShortDescription)" />
    </div>

    <div class="mb-3">
        <label for="price" class="form-label">Giá</label>
        <InputNumber id="price" @bind-Value="Product.Price" class="form-control" />
        <ValidationMessage For="@(() => Product.Price)" />
    </div>

    <div class="mb-3">
        <label for="img" class="form-label">Hình ảnh</label>
        <InputText id="img" @bind-Value="Product.Img" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="brandId" class="form-label">Thương hiệu</label>
        <InputNumber type="number" id="brandId" @bind-Value="Product.BrandId" class="form-control" />
        <ValidationMessage For="@(() => Product.BrandId)" />
    </div>

    <button type="submit" class="btn btn-primary">@ButtonText</button>
    <a href="/Products" class="btn btn-link">Huỷ</a>
</EditForm>

@code {
    [Parameter]
    public Product Product { get; set; } = new();

    [Parameter]
    public string ButtonText { get; set; } = "Lưu";

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }
}